---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import SideBar from "../components/SideBar.astro";
import Card1 from "../components/Card1.astro";
import Card2 from "../components/Card2.astro";
import Intro from "../components/Intro.astro";
import Music from "../components/Music.astro";
---

<Layout title="Reproductor de MÃºsica">
  <div class="flex">
    <SideBar />
    <main
      class="sm:grid sm:grid-flow-col-dense sm:grid-cols-3 py-3 px-4 gap-4 w-full flex flex-col"
    >
      <section class="sm:col-span-2 col-span-1 w-full">
        <Header />
        <Intro />
        <div
          class="sm:grid grid-flow-row-dense lg:grid-cols-3 grid-cols-1 gap-3 hidden"
        >
          <Card1 />
          <Card2 />
        </div>
      </section>
      <section class="w-full">
        <Music />
      </section>
    </main>
  </div>
</Layout>
<script>
  const x = document.querySelector(".ocultar");
  const y = document.querySelector(".mostrar");
  const z = document.querySelector(".sidebar");
  x?.addEventListener("click", () => {
    z?.classList.add("hidden");
  });
  y?.addEventListener("click", () => {
    z?.classList.remove("hidden");
    z?.classList.add("flex");
  });
</script>
