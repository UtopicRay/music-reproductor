---
interface Props {
  img: string;
  title: string;
  artist: string;
  time: string;
  number: string;
}
const { img, title, artist, time,number } = Astro.props;
---

<div class="flex items-center">
  <p class="text-gray-600">{number}</p>
  <img class="rounded-lg max-w-14 mx-3" src={img} />
  <div class="">
    <p class="text-white">{title}</p>
    <p class="text-gray-600">{artist}</p>
  </div>
  <div class="flex ml-auto gap-3">
    <p class="text-white ">{time}</p>
    <button class=" p-[3px] border-[1px] border-gray-600 rounded-lg bg-transparent"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-player-play-filled text-blue-700"
        width="18"
        height="18"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="blue"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M6 4v16a1 1 0 0 0 1.524 .852l13 -8a1 1 0 0 0 0 -1.704l-13 -8a1 1 0 0 0 -1.524 .852z"
          stroke-width="0"
          fill="currentColor"></path></svg
      ></button
    >
    <a
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        class="icon icon-tabler icon-tabler-square-plus"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        stroke-width="2"
        stroke="gray"
        fill="none"
        stroke-linecap="round"
        stroke-linejoin="round"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M9 12h6"></path><path d="M12 9v6"></path><path
          d="M3 5a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v14a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-14z"
        ></path></svg
      ></a
    >
  </div>
</div>
